<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="springbootvinylecommercebackend.mapper.CategoryMapper">
    <resultMap id="categoryResultMap" type="springbootvinylecommercebackend.model.Category">
        <result column="category_id" property="id" />
        <result column="category_name" property="name" />
    </resultMap>

    <select id="getAllCategories" resultMap="categoryResultMap">
        SELECT category_id, category_name
        FROM category
    </select>
</mapper>