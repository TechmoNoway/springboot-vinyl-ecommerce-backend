# ========================================
# Spring Boot Vinyl E-Commerce Backend
# Environment Variables Template
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ========================================
# Database Configuration
# ========================================
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# ========================================
# JWT Authentication
# ========================================
# Generate a secure random key: openssl rand -base64 32
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_chars
JWT_EXPIRATION=86400000
# 1 day in milliseconds (86400000)
JWT_REFRESH_TOKEN_EXPIRATION=604800000
# 7 days in milliseconds (604800000)

# ========================================
# Redis Cache Configuration
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your_redis_password_here

# ========================================
# Email (SMTP) Configuration
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password_here
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)

# ========================================
# VietQR Payment Gateway
# ========================================
VIETQR_CLIENT_ID=your_vietqr_client_id_here
VIETQR_API_KEY=your_vietqr_api_key_here

# ========================================
# OAuth2 - GitHub
# ========================================
GITHUB_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here
# Register at: https://github.com/settings/developers

# ========================================
# OAuth2 - Google
# ========================================
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here
# Register at: https://console.cloud.google.com/apis/credentials

# ========================================
# Payment Providers
# ========================================

# VNPay Configuration
VNPAY_URL=https://sandbox.vnpayment.vn/paygate/vpc.htm
VNPAY_RETURN_URL=http://localhost:4242/api/v1/payments/webhook/vnpay
VNPAY_TMN_CODE=your_vnpay_tmn_code_here
VNPAY_HASH_SECRET=your_vnpay_hash_secret_here
# Get sandbox credentials at: https://sandbox.vnpayment.vn/

# Momo Configuration
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create
MOMO_RETURN_URL=http://localhost:4242/api/v1/payments/webhook/momo
MOMO_PARTNER_CODE=your_momo_partner_code_here
MOMO_ACCESS_KEY=your_momo_access_key_here
MOMO_SECRET_KEY=your_momo_secret_key_here
# Get sandbox credentials at: https://developers.momo.vn/

# ZaloPay Configuration
ZALOPAY_ENDPOINT=https://sb-openapi.zalopay.vn/v2/create
ZALOPAY_RETURN_URL=http://localhost:4242/api/v1/payments/webhook/zalopay
ZALOPAY_APP_ID=your_zalopay_app_id_here
ZALOPAY_KEY1=your_zalopay_key1_here
ZALOPAY_KEY2=your_zalopay_key2_here
# Get sandbox credentials at: https://docs.zalopay.vn/
